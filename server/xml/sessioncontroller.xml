<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<plugin id="sessioncontroller" version="1.0">
	<!-- login/out -->
	<execute id="sessionlogin">
		<string id="user" />
		<string id="pwd" />
	</execute>
	<execute id="sessionlogout" session_specific="1" />
	
	<!-- to keep the session alive, otherwise after 120 sec the session will be terminated -->
	<execute id="sessionidle" session_specific="1" />

	<!-- Propagates all endpoints of own logins -->
	<model id="server.logins.own" session_specific="1" model_key="endpoint">
		<string id="endpoint" /><!-- semicolon separated -->
	</model>

	<property id="server.logins.all" session_specific="1">
		<int id="all" />
	</property>

	<!-- Server infos -->
	<property id="serverinfo" session_specific="1">
		<string id="appversion" />
		<string id="protocolversion" />
		<bool id="auth_required" />
		<int id="auth_timeout" />
		<int id="session_timeout" />
	</property>

	<property id="authentification.serverfull" session_specific="1"></property>
	<property id="authentification.revoked" session_specific="1">
		<bool id="timeout" />
	</property>
	<property id="authentification.failed" session_specific="1"></property>
	<property id="authentification.temporary_sessionid" session_specific="1">
		<string id="sessionid" />
	</property>
	<property id="authentification.success" session_specific="1">
		<string id="sessionid" />
	</property>
</plugin>
