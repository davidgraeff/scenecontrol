<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<plugin id="roomcontrol_leds" version="1.0">
	<action id="led.value_relative">
		<string id="channel" model="leds" model_key="channel" model_show="name" />
		<int id="value" min="-255" max="255" />
		<enum id="fade" n="3" />
	</action>
	<action id="led.value_exponential">
		<string id="channel" model="leds" model_key="channel" model_show="name" />
		<int id="multiplikator" min="-100" max="100" />
		<enum id="fade" n="3" />
	</action>
	<action id="led.value">
		<string id="channel" model="leds" model_key="channel" model_show="name" />
		<int id="value" min="0" max="255" />
		<enum id="fade" n="3" />
	</action>
	<action id="led.toggle">
		<string id="channel" model="leds" model_key="channel" model_show="name" />
		<enum id="fade" n="3" />
	</action>
	<action id="led.moodlight">
		<string id="channel" model="leds" model_key="channel" model_show="name" />
		<bool id="moodlight" />
	</action>
	<condition id="led.condition">
		<string id="channel" model="leds" model_key="channel" model_show="name" />
		<int id="lower" min="0" max="255" />
		<int id="upper" min="0" max="255" />
	</condition>
	<action id="led.name">
		<string id="channel" model="leds" model_key="channel" model_show="name" />
		<string id="name" />
	</action>
	
	<model id="leds" model_key="channel">
		<string id="channel" />
		<int id="value">0</int>
		<string id="name">...</string>
	</model>

	<section>switch</section>
</plugin>
