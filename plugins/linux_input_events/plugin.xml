<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<plugin id="linux_input_events" version="1.0">
  <event id="inputevent">
    <string id="inputdevice" model="inputdevice" sendback_as="selected_input_device" />
    <string id="kernelkeyname" property="lastinputkey" />
    <bool id="pressed">1</bool>
    <bool id="repeat">0</bool>
  </event>
  <property id="inputdevice" model_key="device_path">
    <string id="device_path" />
	<string id="device_info" />
  </property>
  
  <property id="lastinputkey" session_specific="1" depends_on="selected_input_device">
	<string id="inputdevice" />
    <string id="kernelkeyname" />
  </property>
  
  <property id="selected_input_device" session_specific="1" >
    <string id="inputdevice" />
  </property>

</plugin>
